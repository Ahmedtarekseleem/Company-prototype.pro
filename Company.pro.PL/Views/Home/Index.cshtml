@{
    ViewData["Title"] = "Home Page";
}

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<!-- Hero Section -->
<div class="hero-section text-center text-white py-5" style="background: linear-gradient(135deg, #007bff, #0056b3);">
    <div class="container">
        <h1 class="display-3 fw-bold animate__animated animate__fadeIn">Welcome to Company.pro.PL</h1>
        <p class="lead mt-3 animate__animated animate__fadeIn animate__delay-1s">
            Manage your team efficiently with our powerful tools for employees, departments, and roles.
        </p>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-light btn-lg mt-4 shadow-sm animate__animated animate__fadeIn animate__delay-2s">
            <i class="fas fa-users me-2"></i> View Employees
        </a>
    </div>
</div>

<!-- Introduction Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-8 offset-md-2">
            <h2 class="display-5 fw-bold text-primary">Streamline Your Workflow</h2>
            <p class="lead text-muted mt-3">
                Company.pro.PL is designed to help you manage your organization with ease. From tracking employee details to organizing departments and roles, we’ve got you covered.
            </p>
        </div>
    </div>
</div>

<!-- Features/Stats Section -->
<div class="container my-5">
    <div class="row text-center">
        <!-- Stat 1: Employees -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 animate__animated animate__fadeInUp">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="card-title fw-bold">150+</h3>
                    <p class="card-text text-muted">Employees Managed</p>
                </div>
            </div>
        </div>
        <!-- Stat 2: Departments -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 animate__animated animate__fadeInUp animate__delay-1s">
                <div class="card-body">
                    <i class="fas fa-sitemap fa-3x text-primary mb-3"></i>
                    <h3 class="card-title fw-bold">10+</h3>
                    <p class="card-text text-muted">Departments Organized</p>
                </div>
            </div>
        </div>
        <!-- Stat 3: Roles -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 animate__animated animate__fadeInUp animate__delay-2s">
                <div class="card-body">
                    <i class="fas fa-key fa-3x text-primary mb-3"></i>
                    <h3 class="card-title fw-bold">20+</h3>
                    <p class="card-text text-muted">Roles Assigned</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Get Started Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-12">
            <h2 class="display-5 fw-bold text-primary">Get Started Today</h2>
            <p class="lead text-muted mt-3">
                Explore the key features of Company.pro.PL and take control of your organization.
            </p>
            <div class="d-flex justify-content-center flex-wrap gap-3 mt-4">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-users me-2"></i> Manage Employees
                </a>
                <a asp-controller="Department" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-sitemap me-2"></i> Manage Departments
                </a>
                <a asp-controller="Role" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-key me-2"></i> Manage Roles
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .hero-section {
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-attachment: fixed;
        background-size: cover;
    }

    .hero-section h1 {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
    }

    
    }
</style>

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />